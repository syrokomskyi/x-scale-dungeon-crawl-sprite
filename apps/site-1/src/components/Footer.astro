---
const { startCopyrightYear, hasBackground } = Astro.props;
---

<footer
  class={`text-white py-4 mt-8 ${hasBackground ? "bg-white/10 backdrop-blur-md" : ""}`}
>
  <div class="container mx-auto px-4 text-center">
    <p>
      <span class="heartbeat">Â©</span>
      <span id="copyright-year">{startCopyrightYear}</span> |
      <a
        href="https://syrokomskyi.com"
        class="hover:text-gray-300 transition-colors"
        target="_blank"
      >
        syrokomskyi<span class="heartbeat">.</span>com
      </a>
    </p>
  </div>
</footer>

<script is:inline define:vars={{ startCopyrightYear }}>
  const currentCopyrightYear = new Date().getFullYear();
  const copyrightSpan = document.getElementById("copyright-year");
  if (copyrightSpan) {
    copyrightSpan.textContent =
      startCopyrightYear === currentCopyrightYear
        ? currentCopyrightYear
        : `${startCopyrightYear}-${currentCopyrightYear}`;
  }
</script>
