---
interface Props {
  path: string;
  name: string;
  note: string;
  icon: string;
}

const { path, name, note, icon } = Astro.props;
---

<div
  class="bg-gray-800 rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow"
>
  <img
    src={`/${path}`}
    alt={name}
    class="w-full h-144 object-cover"
    loading="lazy"
  />
  <div class="p-4">
    <h3 class="text-lg text-white mb-2">
      <img src={`/${icon}`} alt="icon" class="w-6 h-6 inline mr-2" />{name}
    </h3>
    {note && <p class="text-gray-300 text-s">{note}</p>}
  </div>
</div>
