---
import ImageCard from "../components/ImageCard.astro";
import Layout from "../layouts/Layout.astro";

const images = await import("../../public/data/images.json");
const imageList = images.default;
---

<Layout title="Dungeon Crawl Sprites">
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-4xl text-center mb-8 text-white">
      Dungeon Crawl: Stone Soup | Fun Gallery
    </h1>
    <div
      class="grid grid-cols-1 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6"
    >
      {
        imageList.map((image) => (
          <ImageCard
            path={image.path}
            name={image.name}
            note={image.note}
            icon={image.icon}
          />
        ))
      }
    </div>
  </main>
</Layout>
